{
  "configurations": [
    {
      "name": "Launch Firebase Serve with Sudo",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "/bin/bash",
      "runtimeArgs": ["-c", "sudo firebase serve"],
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}",
      "env": {
        "FIREBASE_DEBUG": "true"
      }
    }
  ]
}
